<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product Offer</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: #f0f0f0;
        }

        .container {
            max-width: 1500px; /* Increased from 1300px */
            margin: auto;
            padding-left: 25px;
            padding-right: 25px;
        }

        .row {
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            justify-content: center;
        }

        .col-md-6 { /* Changed from col-md-4 to col-md-6 for wider form */
            flex-basis: 45%; /* Changed from 33.33% to 50% */
            max-width: 42%; /* Changed from 33.33% to 50% */
        }

        .card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 0 20px 0px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: 100%; /* Ensure card takes full width of column */
        }

        .card-body {
            padding: 20px;
        }

        .text-center {
            text-align: center;
        }

        .text-primary {
            color: #007bff;
        }

        .form-label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .btn {
            display: inline-block;
            background: #007bff;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s;
        }

        .btn:hover {
            background: #0056b3;
        }

        .alert {
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
        }

        .alert-danger {
            background: #ffebee;
            color: #c62828;
            border: 1px solid #ffcdd2;
        }

        .login-button {
            margin-top: 20px;
        }

        .w-100 {
            width: 100%;
        }

        .mt-2 {
            margin-top: 10px;
        }

        /* Add these styles to your existing CSS */

/* Style for the select container */
.select-container {
    position: relative;
    margin-bottom: 15px;
}

/* Style for the select element */
select {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    background-color: white;
    appearance: none; /* Removes default arrow in some browsers */
    -webkit-appearance: none; /* Removes default arrow in Chrome/Safari */
    -moz-appearance: none; /* Removes default arrow in Firefox */
    cursor: pointer;
    font-family: 'Poppins', sans-serif;
    font-size: 16px;
}

/* Custom dropdown arrow */
.select-container::after {
    content: "â–¼";
    font-size: 12px;
    color: #777;
    position: absolute;
    right: 15px;
    top: 50%;
    transform: translateY(-50%);
    pointer-events: none;
}

/* Focus style */
select:focus {
    outline: none;
    border-color: #007bff;
    box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
}

/* Style for the options */
select option {
    padding: 10px;
    background: white;
    color: #030303;
}

/* Style for the disabled default option */
select option[disabled][selected] {
    color: #999;
}
    </style>
</head>

<body>
    <div class="container" style="padding: 8%;">
        <div class="row justify-content-center">
            <div class="col-md-6"> <!-- Changed from col-md-4 to col-md-6 -->
                <div class="card">
                    <div class="card-body">
                        <h1 class="text-center text-primary">Add Product Offer</h1>
                        <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
                            <div id="errorMessage" class="alert alert-danger">
                                <%= errorMessage %>
                            </div>
                        <% } %>
                        <form id="offerForm" action="/addProductOfferPost" method="POST">
                           <div class="mb-3 mt-4">
                            <label for="productname" class="form-label">Product Name</label>
                             <div class="select-container">
                                <select name="productname" id="productname" class="form-control">
                                  <option value="" disabled selected>Select a Product</option>
                                <% products.forEach(product=>{%>
                                  <option value="<%=product.productname%>"><%=product.productname%></option>
                                  <%})%>
                              </select>
                            </div>
                         <div id="productnameError" class="text-danger"></div>
                          </div>

                            <div class="mb-3 mt-4">
                                <label for="price" class="form-label">Product Price:</label>
                                <input type="number" class="form-control" id="productprice" name="productprice">
                                <div id="priceError" class="text-danger"></div>
                            </div>

                            <div class="mb-3 mt-4">
                                <label for="productoffer" class="form-label">Product Offer (%)</label>
                                <input type="text" class="form-control" id="productoffer" name="productoffer">
                                <div id="productofferError" class="text-danger"></div>
                            </div>

                            <div class="text-center login-button mb-4">
                                <button type="submit" class="btn btn-primary w-100">Add</button>
                                <a href="/offerManagement" class="btn btn-primary w-100 mt-2">Go Back</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        // Function to hide the error message after a specified timeout
        function hideError(elementId) {
            const errorElement = document.getElementById(elementId);
            if (errorElement) {
                setTimeout(() => {
                    errorElement.textContent = ''; // Clear the error message
                }, 2000); // 2000 milliseconds = 2 seconds
            }
        }
    
        // Function to hide the error message after 3 seconds
        function hideErrorMessage() {
            const errorMessage = document.getElementById('errorMessage');
            if (errorMessage) {
                setTimeout(() => {
                    errorMessage.style.display = 'none';
                }, 2000); // 3000 milliseconds = 3 seconds
            }
        }
    
        // Call the function when the page loads
        window.onload = hideErrorMessage;
    
document.getElementById('offerForm').addEventListener('submit', function(event) {
    // Remove event.preventDefault() - let the form submit normally
    // Only prevent default if validation fails
    
    const productNameInput = document.getElementById('productname');
    const priceInput = document.getElementById('productprice');
    const offerInput = document.getElementById('productoffer');
    
    const productName = productNameInput.value.trim();
    const price = priceInput.value.trim();
    const offer = offerInput.value.trim();

    // Clear previous error messages
    document.getElementById('productnameError').textContent = '';
    document.getElementById('priceError').textContent = '';
    document.getElementById('productofferError').textContent = '';

    let isValid = true;

    if (!productName) {
        document.getElementById('productnameError').textContent = 'Please enter a product name.';
        hideError('productnameError');
        isValid = false;
    }

    if (!price) {
        document.getElementById('priceError').textContent = 'Please enter the price.';
        hideError('priceError');
        isValid = false;
    } else if (isNaN(price)) {
        document.getElementById('priceError').textContent = 'Price must be a number.';
        hideError('priceError');
        isValid = false;
    }

    if (!offer) {
        document.getElementById('productofferError').textContent = 'Please enter the offer percentage.';
        hideError('productofferError');
        isValid = false;
    } else if (isNaN(offer)) {
        document.getElementById('productofferError').textContent = 'Offer must be a number.';
        hideError('productofferError');
        isValid = false;
    } else if (parseFloat(offer) < 0 || parseFloat(offer) > 100) {
        document.getElementById('productofferError').textContent = 'Offer must be between 0 and 100.';
        hideError('productofferError');
        isValid = false;
    }

    if (!isValid) {
        event.preventDefault(); // Only prevent submission if validation fails
    }
});
    </script>
</body>
</html>