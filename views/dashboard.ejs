<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <style>
        /* General Styles */
        body { 
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #f5f5f5;
        }
        
        /* Sidebar Styles */
        .sidebar {
            width: 100%;
            background-color: #2c3e50;
            color: white;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
            order: 1;
            overflow-y: auto;
        }
        
        .sidebar-header {
            padding: 20px 15px;
            background-color: #1a252f;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        
        .sidebar-header h2 {
            color: white;
            margin: 0;
            font-size: 1.3rem;
            font-weight: 600;
        }
        
        .sidebar-menu {
            padding: 0;
            margin: 0;
            list-style: none;
        }
        
        .menu-title {
            padding: 12px 15px;
            color: #b8c7ce;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-weight: 600;
            margin-top: 10px;
        }
        
        .menu-item {
            position: relative;
        }
        
        .menu-item.has-submenu > a::after {
            content: "â–¸";
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            transition: transform 0.3s;
        }
        
        .menu-item.has-submenu.active > a::after {
            transform: translateY(-50%) rotate(90deg);
        }
        
        .menu-link {
            display: block;
            padding: 12px 15px;
            color: #b8c7ce;
            text-decoration: none;
            transition: all 0.3s;
            position: relative;
            font-size: 0.95rem;
        }
        
        .menu-link:hover,
        .menu-link.active {
            color: white;
            background-color: #1a252f;
        }
        
        .menu-link i {
            margin-right: 10px;
            width: 20px;
            text-align: center;
        }
        
        .submenu {
            list-style: none;
            padding: 0;
            margin: 0;
            background-color: #1a252f;
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease-out;
        }
        
        .submenu.active {
            max-height: 500px;
        }
        
        .submenu .menu-link {
            padding-left: 45px;
        }
        
        .menu-toggle {
            display: none;
            padding: 15px;
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
        }
        
        /* Main Content Styles */
        .main-content {
            flex: 1;
            padding: 15px;
            background-color: white;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            order: 2;
        }
        
        /* Rest of your existing styles... */
        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            flex-wrap: wrap;
        }
        
        .heading {
            flex-grow: 1;
            text-align: center;
            color: #333;
            font-size: 1.4rem;
            margin: 10px 0;
        }
        
        /* Table Styles */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
            border: 1px solid #ebdcdc;
        }

        table th, table td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            border-right: 1px solid #ddd;
        }

        table th {
            background-color: #333;
            color: #fff;
            border-right: 1px solid #555;
            font-size: 0.9rem;
        }

        table th:last-child,
        table td:last-child {
            border-right: none;
        }

        table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        table tr:hover {
            background-color: #f1f1f1;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
            padding: 5px 8px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            font-size: 0.8rem;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        .btn-success {
            background-color: #28a745;
            color: white;
            padding: 5px 8px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            font-size: 0.8rem;
        }

        .btn-success:hover {
            background-color: #218838;
        }

        /* Chart Container Styles */
        .chart-container {
            background: white;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            margin-bottom: 20px;
            height: auto;
            min-height: 300px;
            position: relative;
        }

        .chart-container canvas {
            width: 100% !important;
            height: auto !important;
        }

        /* Filter Styles */
        .filterbody {
            margin-bottom: 15px;
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }

        .filterbody label {
            margin-right: 8px;
            margin-bottom: 5px;
            font-size: 0.9rem;
        }

        .filterbody select {
            padding: 6px 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 0.9rem;
            margin-bottom: 5px;
        }

        /* Section Headings */
        .subhead h6, .topsellingp h6, .topsellingc h6, .topsellingb h6 {
            font-size: 1.1rem;
            color: #333;
            margin: 20px 0 10px;
            padding-bottom: 8px;
            border-bottom: 1px solid #ddd;
        }

        /* Grid Layout for Tables on Larger Screens */
        .dashboard-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 20px;
        }

        /* Responsive Adjustments */
        @media (min-width: 768px) {
            body {
                flex-direction: row;
            }
            
            .sidebar {
                width: 250px;
                height: 100vh;
                position: fixed;
                order: 0;
            }
            
            .main-content {
                margin-left: 250px;
                padding: 20px;
            }
            
            .dashboard-grid {
                grid-template-columns: repeat(2, 1fr);
            }
            
            .chart-container {
                height: 400px;
            }
            
            .menu-toggle {
                display: none;
            }
        }

        @media (min-width: 992px) {
            .dashboard-grid {
                grid-template-columns: repeat(3, 1fr);
            }
            
            .heading {
                font-size: 1.6rem;
            }
            
            .sidebar-header h2 {
                font-size: 1.5rem;
            }
            
            .menu-link {
                font-size: 1rem;
            }
            
            table th, table td {
                padding: 12px;
            }
        }

        @media (max-width: 767px) {
            .sidebar {
                position: relative;
                height: auto;
            }
            
            .sidebar-menu {
                display: none;
            }
            
            .sidebar-menu.active {
                display: block;
            }
            
            .menu-toggle {
                display: block;
            }
        }

        /* Print Styles */
        @media print {
            .sidebar {
                display: none;
            }
            
            .main-content {
                margin-left: 0;
                padding: 0;
                box-shadow: none;
            }
            
            .filterbody {
                display: none;
            }
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/moment@2.29.1/moment.min.js"></script>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <h2><i class="fas fa-tachometer-alt"></i> Admin Panel</h2>
            <div class="menu-toggle">
                <i class="fas fa-bars"></i>
            </div>
        </div>
        <ul class="sidebar-menu">
            <li class="menu-title">MAIN NAVIGATION</li>
            <li class="menu-item">
                <a href="/admin/dashboard" class="menu-link active">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
            </li>
            <li class="menu-item has-submenu">
                <a href="/admin/usermanagement" class="menu-link">
                    <i class="fas fa-users"></i> User Management
                </a>
                <ul class="submenu">
                    <li class="menu-item">
                        <a href="/admin/usermanagement" class="menu-link">All Users</a>
                    </li>
                    <li class="menu-item">
                        <a href="#" class="menu-link">Add User</a>
                    </li>
                </ul>
            </li>
            <li class="menu-item has-submenu">
                <a href="/admin/categorymanagement" class="menu-link">
                    <i class="fas fa-tags"></i> Category Management
                </a>
                <ul class="submenu">
                    <li class="menu-item">
                        <a href="/admin/categorymanagement" class="menu-link">All Categories</a>
                    </li>
                    <li class="menu-item">
                        <a href="#" class="menu-link">Add Category</a>
                    </li>
                </ul>
            </li>
            <li class="menu-item has-submenu">
                <a href="/productmanagement" class="menu-link">
                    <i class="fas fa-box-open"></i> Product Management
                </a>
                <ul class="submenu">
                    <li class="menu-item">
                        <a href="/productmanagement" class="menu-link">All Products</a>
                    </li>
                    <li class="menu-item">
                        <a href="#" class="menu-link">Add Product</a>
                    </li>
                </ul>
            </li>
            <li class="menu-item">
                <a href="/admin/orderManagement" class="menu-link">
                    <i class="fas fa-shopping-cart"></i> Order Management
                </a>
            </li>
            <li class="menu-item">
                <a href="/couponManagement" class="menu-link">
                    <i class="fas fa-ticket-alt"></i> Coupon Management
                </a>
            </li>
            <li class="menu-item">
                <a href="/salesReport" class="menu-link">
                    <i class="fas fa-chart-line"></i> Sales Report
                </a>
            </li>
            <li class="menu-item">
                <a href="/offerManagement" class="menu-link">
                    <i class="fas fa-percentage"></i> Offer Management
                </a>
            </li>
            <li class="menu-item">
                <a href="/admin/adminLogin" class="menu-link" id="logout-link">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="header-container">
            <h2 class="heading">WELCOME TO DASHBOARD</h2>
        </div>

        <div class="subhead">
            <h6>Orders Overview</h6>
        </div>
        
        <div class="filterbody">
            <label for="chartselector">Select Chart Type:</label>
            <select id="chartselector" onchange="">
                <option value="chart1">Weekly Orders</option>
                <option value="chart2">Monthly Orders</option>
                <option value="chart3">Yearly Orders</option>
            </select>
        </div>

        <div class="chart-container">
            <canvas id="chart1" width="400" height="200" data-dates="<%= JSON.stringify(dates)%>"
                data-dailyOrder='<%=JSON.stringify(orderCounts)%>'></canvas>
            <canvas id="chart2" width="400" height="200" data-monthly="<%=JSON.stringify(monthlyData)%>"></canvas>
            <canvas id="chart3" width="400" height="200" data-yearlyOrders="<%=JSON.stringify(totalOrderCount3)%>"></canvas>
        </div>

        <div class="dashboard-grid">
            <div class="topsellingp">
                <h6>Top Selling Products</h6>
                <table id="topSellingProducts">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Total Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0 ; i < productNamess.length ; i++){%>
                        <tr>
                            <td><%=productNamess[i]%></td>
                            <td><%= sellingQuantities[i] %></td>
                        </tr>
                        <%}%>
                    </tbody>
                </table>
            </div>

            <div class="topsellingc">
                <h6>Top Selling Categories</h6>
                <table id="topSellingCategory">
                    <thead>
                        <tr>
                            <th>Category Name</th>
                            <th>Total Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(entriesArray){%>
                        <% entriesArray.forEach(category=>{%>
                        <tr>
                            <td><%=category[0]%></td>
                            <td><%=category[1]%></td>
                        </tr>
                        <% })%>
                        <% }%>
                    </tbody>
                </table>
            </div>

            <div class="topsellingb">
                <h6>Top Selling Brand</h6>
                <table id="topSellingBrand">
                    <thead>
                        <tr>
                            <th>Brand Name</th>
                            <th>Total Quantity Sold</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0 ; i < brandNames.length ; i++){%>
                        <tr>
                            <td><%=brandNames[i]%></td>
                            <td><%=brandQuantities[i]%></td>
                        </tr>
                        <%}%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <script>
    document.addEventListener('DOMContentLoaded', function () {
        // Toggle mobile menu
        const menuToggle = document.querySelector('.menu-toggle');
        const sidebarMenu = document.querySelector('.sidebar-menu');
        
        if (menuToggle && sidebarMenu) {
            menuToggle.addEventListener('click', function() {
                sidebarMenu.classList.toggle('active');
            });
        }

        // Handle submenu toggling
        const hasSubmenuItems = document.querySelectorAll('.has-submenu');
        
        hasSubmenuItems.forEach(item => {
            const link = item.querySelector('a');
            const submenu = item.querySelector('.submenu');
            
            link.addEventListener('click', function(e) {
                if (window.innerWidth < 768) {
                    e.preventDefault();
                    item.classList.toggle('active');
                    submenu.classList.toggle('active');
                }
            });
        });

        // Initially show chart1 only
        document.getElementById('chart1').style.display = 'block';
        document.getElementById('chart2').style.display = 'none';
        document.getElementById('chart3').style.display = 'none';

        document.getElementById('chartselector').addEventListener('change', function () {
            const selected = this.value;

            // Hide all charts
            document.getElementById('chart1').style.display = 'none';
            document.getElementById('chart2').style.display = 'none';
            document.getElementById('chart3').style.display = 'none';

            // Show selected chart
            document.getElementById(selected).style.display = 'block';
        });

        document.getElementById('logout-link').addEventListener('click', function (e) {
            e.preventDefault();
            
            Swal.fire({
                title: "Are you sure you want to logout?",
                icon: "question",
                showCancelButton: true,
                confirmButtonText: "Yes, logout",
                cancelButtonText: "Cancel",
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "/admin/adminLogin";
                }
            });
        });

        // Initialize charts (example for chart1)
        const chart1Container = document.querySelector('#chart1')
        const rawDates = chart1Container.getAttribute('data-dates')
        const dates = JSON.parse(rawDates)
        const rawDailyOrders = chart1Container.getAttribute('data-dailyOrder')
        const dailyOrders = JSON.parse(rawDailyOrders)

        const orderEndate = moment(dates[dates.length-1])
        const lastSevenDays =[]
        let orders=[]

        for(let i=6; i>=0;i--) {
            const date = orderEndate.clone().subtract(i,'days').format('YYYY-MM-DD')

            let index = dates.indexOf(date)
            if(index !== -1) {
                orders.push(dailyOrders[index])
            } else {
                orders.push(0)
            }
            lastSevenDays.push(date)
        }

        const ctx1 = document.getElementById('chart1').getContext('2d')
        const masspopchart1 = new Chart(ctx1, {
            type: 'bar',
            data: {
                labels: lastSevenDays,
                datasets: [{
                    label: 'Weekly Orders',
                    data: orders,
                    backgroundColor: '#4e73df',
                    borderColor: '#2e59d9',
                    borderWidth: 1,
                    borderRadius: 4,
                    hoverBackgroundColor: '#2e59d9',
                    hoverBorderColor: '#1e3fb7',
                    hoverBorderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top',
                        labels: {
                            color: '#333',
                            font: {
                                size: 12,
                                weight: 'bold'
                            },
                            boxWidth: 12,
                            padding: 20
                        }
                    },
                    tooltip: {
                        backgroundColor: '#333',
                        titleColor: '#fff',
                        bodyColor: '#fff',
                        borderColor: '#555',
                        borderWidth: 1,
                        displayColors: true,
                        callbacks: {
                            label: function(context) {
                                return context.parsed.y + ' orders';
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        grid: {
                            display: false
                        },
                        ticks: {
                            color: '#666'
                        }
                    },
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: '#e3e6f0',
                            drawBorder: false
                        },
                        ticks: {
                            color: '#666',
                            callback: function(value) {
                                if (Number.isInteger(value)) {
                                    return value;
                                }
                            },
                            stepSize: 1
                        }
                    }
                },
                animation: {
                    duration: 1000,
                    easing: 'easeOutQuart'
                }
            }
        });  

        // ====================== MONTHLY CHART ======================
        const chart2Container = document.querySelector('#chart2');
        const rawMonthlyOrders = chart2Container.getAttribute('data-monthly');
        const monthlyRaw = JSON.parse(rawMonthlyOrders);

        // Prepare 12 months from current month
        const currentDate = new Date();
        const currentYear = currentDate.getFullYear();
        const currentMonth = currentDate.getMonth() + 1;

        const monthlyLabels = Array.from({ length: 12 }, (_, index) => {
            const year = currentMonth + index > 12 ? currentYear + 1 : currentYear;
            const month = (currentMonth + index - 1) % 12 + 1;
            return `${year}-${month.toString().padStart(2, '0')}`;
        });

        // Convert array to lookup map
        const orderMap = {};
        monthlyRaw.forEach(entry => {
            orderMap[entry.month] = entry.orderCount;
        });

        const monthlyData = monthlyLabels.map(label => orderMap[label] || 0);

        const ctx2 = document.getElementById('chart2').getContext('2d');
        new Chart(ctx2, {
            type: 'bar',
            data: {
                labels: monthlyLabels,
                datasets: [{
                    label: 'Monthly Orders',
                    data: monthlyData,
                    backgroundColor: '#4e73df',
                    borderColor: '#2e59d9',
                    borderWidth: 1,
                    borderRadius: 4,
                    hoverBackgroundColor: '#2e59d9',
                    hoverBorderColor: '#1e3fb7',
                    hoverBorderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top',
                        labels: {
                            color: '#333',
                            font: { size: 12, weight: 'bold' },
                            boxWidth: 12,
                            padding: 20
                        }
                    },
                    tooltip: {
                        backgroundColor: '#333',
                        titleColor: '#fff',
                        bodyColor: '#fff',
                        borderColor: '#555',
                        borderWidth: 1,
                        displayColors: true,
                        callbacks: {
                            label: function (context) {
                                return context.parsed.y + ' orders';
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        grid: { display: false },
                        ticks: { color: '#666' }
                    },
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: '#e3e6f0',
                            drawBorder: false
                        },
                        ticks: {
                            color: '#666',
                            callback: function (value) {
                                if (Number.isInteger(value)) return value;
                            },
                            stepSize: 1
                        }
                    }
                },
                animation: {
                    duration: 1000,
                    easing: 'easeOutQuart'
                }
            }
        });

        // yearly chart
        const chart3Container = document.getElementById('chart3')
        const rawYearlyOrders = chart3Container.getAttribute('data-yearlyOrders')
        const yearlyOrders = rawYearlyOrders.split(',').map(Number)

        const currentyear = new Date().getFullYear()

        const yearlyLabels = Array.from({length:5},(_, index)=> currentyear + index )

        const ctx3 = document.getElementById('chart3').getContext('2d')

        let masspopChart3 = new Chart(ctx3, {
            type: 'bar',
            data: {
                labels: yearlyLabels,
                datasets: [{
                    label: 'Yearly Orders',
                    data: yearlyOrders,
                    backgroundColor: '#4e73df',
                    borderColor: '#2e59d9',
                    borderWidth: 1,
                    borderRadius: 4,
                    hoverBackgroundColor: '#2e59d9',
                    hoverBorderColor: '#1e3fb7',
                    hoverBorderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top',
                        labels: {
                            color: '#333',
                            font: { size: 12, weight: 'bold' },
                            boxWidth: 12,
                            padding: 20
                        }
                    },
                    tooltip: {
                        backgroundColor: '#333',
                        titleColor: '#fff',
                        bodyColor: '#fff',
                        borderColor: '#555',
                        borderWidth: 1,
                        displayColors: true,
                        callbacks: {
                            label: function (context) {
                                return context.parsed.y + ' orders';
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        grid: { display: false },
                        ticks: { color: '#666' }
                    },
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: '#e3e6f0',
                            drawBorder: false
                        },
                        ticks: {
                            color: '#666',
                            callback: function (value) {
                                if (Number.isInteger(value)) return value;
                            },
                            stepSize: 1
                        }
                    }
                },
                animation: {
                    duration: 1000,
                    easing: 'easeOutQuart'
                }
            }
        });

        // Handle window resize for charts
        function handleResize() {
            if (masspopchart1) masspopchart1.resize();
            if (masspopChart3) masspopChart3.resize();
        }

        window.addEventListener('resize', handleResize);
    });
    </script>
</body>
</html>