<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <style>
        /* General Styles */
        body { 
            font-family: Arial, sans-serif; 
            margin: 0;
            padding: 0;
            display: flex;
            min-height: 100vh;
            background-color: #f5f5f5;
        }
        
        /* Sidebar Styles */
        .sidebar {
            width: 215px;
            background-color: #333;
            color: white;
            padding: 20px;
            height: 100vh;
            position: fixed;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
        }
        
        .sidebar h2 {
            text-align: center;
            color: white;
            margin-bottom: 30px;
            padding-bottom: 10px;
            border-bottom: 1px solid #444;
        }

        .sidebar ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        .sidebar ul li {
            margin: 15px 0;
        }

        .sidebar ul li a {
            color: #fff;
            text-decoration: none;
            display: block;
            padding: 8px 10px;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        .sidebar ul li a:hover {
            background-color: #444;
        }
        
        /* Main Content Styles */
        .main-content {
            flex: 1;
            margin-left: 250px;
            padding: 20px;
            background-color: white;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        
        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        
        .heading {
            flex-grow: 1;
            text-align: center;
            color: #333;
        }
        
        /* Table Styles */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            border: 1px solid #ebdcdc;
        }

        table th, table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            border-right: 1px solid #ddd;
        }

        table th {
            background-color: #333;
            color: #fff;
            border-right: 1px solid #555;
        }

        table th:last-child,
        table td:last-child {
            border-right: none;
        }

        table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        table tr:hover {
            background-color: #f1f1f1;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        .btn-success {
            background-color: #28a745;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
        }

        .btn-success:hover {
            background-color: #218838;
        }

        /* Chart Container Styles */
        .chart-container {
            background: white;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            margin-bottom: 30px;
            height: 400px;
        }

        /* Filter Styles */
        .filterbody {
            margin-bottom: 20px;
        }

        .filterbody label {
            margin-right: 10px;
        }

        .filterbody select {
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        /* Section Headings */
        .subhead, .topsellingp h6, .topsellingc h6, .topsellingb h6 {
            font-size: 1.2rem;
            color: #333;
            margin: 25px 0 15px;
            padding-bottom: 10px;
            border-bottom: 1px solid #ddd;
        }

        /* Responsive Adjustments */
        @media (max-width: 768px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }
            
            .main-content {
                margin-left: 0;
            }
        }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/moment@2.29.1/moment.min.js"></script>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h2>Admin Panel</h2>
        <ul>
            <li><a href="/admin/dashboard">Dashboard</a></li>
            <li><a href="/admin/usermanagement">User Management</a></li>
            <li><a href="/admin/categorymanagement">Category Management</a></li>
            <li><a href="/productmanagement">Product Management</a></li>
            <li><a href="/admin/orderManagement">Order Management</a></li>
            <li><a href="/couponManagement">Coupon Management</a></li>
            <li><a href="/salesReport">Sales</a></li>
            <li><a href="/offerManagement">Offer Management</a></li>
            <li><a href="/admin/adminLogin" id="logout-link">Logout</a></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="header-container">
            <h2 class="heading">WELCOME TO DASHBOARD</h2>
        </div>

        <div class="subhead">
            <h6>Orders Overview</h6>
        </div>
        
        <div class="filterbody">
            <label for="chartselector">Select Chart Type:</label>
            <select id="chartselector" onchange="">
                <option value="chart1">Weekly Orders</option>
                <option value="chart2">Monthly Orders</option>
                <option value="chart3">Yearly Orders</option>
            </select>
        </div>

        <div class="chart-container">
            <canvas id="chart1" width="400" height="200" data-dates="<%= JSON.stringify(dates)%>"
                data-dailyOrder='<%=JSON.stringify(orderCounts)%>'></canvas>
            <canvas id="chart2" width="400" height="200" data-monthly="<%=JSON.stringify(monthlyData)%>"></canvas>
            <canvas id="chart3" width="400" height="200" data-yearlyOrders="<%=JSON.stringify(totalOrderCount3)%>"></canvas>
        </div>

        <div class="topsellingp">
            <h6>Top Selling Products</h6>
            <table id="topSellingProducts">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Total Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i=0 ; i < productNamess.length ; i++){%>
                    <tr>
                        <td><%=productNamess[i]%></td>
                        <td><%= sellingQuantities[i] %></td>
                    </tr>
                    <%}%>
                </tbody>
            </table>
        </div>

        <div class="topsellingc">
            <h6>Top Selling Categories</h6>
            <table id="topSellingCategory">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Total Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(entriesArray){%>
                    <% entriesArray.forEach(category=>{%>
                    <tr>
                        <td><%=category[0]%></td>
                        <td><%=category[1]%></td>
                    </tr>
                    <% })%>
                    <% }%>
                </tbody>
            </table>
        </div>

        <div class="topsellingb">
            <h6>Top Selling Brand</h6>
            <table id="topSellingBrand">
                <thead>
                    <tr>
                        <th>Brand Name</th>
                        <th>Total Quantity Sold</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i=0 ; i < brandNames.length ; i++){%>
                    <tr>
                        <td><%=brandNames[i]%></td>
                        <td><%=brandQuantities[i]%></td>
                    </tr>
                    <%}%>
                </tbody>
            </table>
        </div>
    </div>
    
    <script>

    
    document.addEventListener('DOMContentLoaded', function () {
        // Initially show chart1 only
        document.getElementById('chart1').style.display = 'block';
        document.getElementById('chart2').style.display = 'none';
        document.getElementById('chart3').style.display = 'none';

        document.getElementById('chartselector').addEventListener('change', function () {
            const selected = this.value;

            // Hide all charts
            document.getElementById('chart1').style.display = 'none';
            document.getElementById('chart2').style.display = 'none';
            document.getElementById('chart3').style.display = 'none';

            // Show selected chart
            document.getElementById(selected).style.display = 'block';
        });
    });


        document.getElementById('logout-link').addEventListener('click', function (e) {
            e.preventDefault();
            
            Swal.fire({
                title: "Are you sure you want to logout?",
                icon: "question",
                showCancelButton: true,
                confirmButtonText: "Yes, logout",
                cancelButtonText: "Cancel",
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "/admin/adminLogin";
                }
            });
        });

        // Initialize charts (example for chart1)
        document.addEventListener('DOMContentLoaded', function() {
     
            const chart1Container = document.querySelector('#chart1')
            const rawDates = chart1Container.getAttribute('data-dates')
            const dates = JSON.parse(rawDates)
            const rawDailyOrders = chart1Container.getAttribute('data-dailyOrder')
            const dailyOrders = JSON.parse(rawDailyOrders)

            const orderEndate = moment(dates[dates.length-1])
            const lastSevenDays =[]
            let orders=[]

            for(let i=6; i>=0;i--)
           {
            const date = orderEndate.clone().subtract(i,'days').format('YYYY-MM-DD')

            let index = dates.indexOf(date)
            if(index !== -1)
             {
                orders.push(dailyOrders[index])
             }
             else
             {
                orders.push(0)
             }
             lastSevenDays.push(date)
           }
     const ctx1 = document.getElementById('chart1').getContext('2d')
     const masspopchart1 =   new Chart(ctx1, {
    type: 'bar',
    data: {
        labels: lastSevenDays,
        datasets: [{
            label: 'Weekly Orders',
            data: orders,
            backgroundColor: '#4e73df', // Solid blue matching your theme
            borderColor: '#2e59d9',    // Slightly darker border
            borderWidth: 1,
            borderRadius: 4,            // Rounded corners for bars
            hoverBackgroundColor: '#2e59d9', // Darker on hover
            hoverBorderColor: '#1e3fb7',
            hoverBorderWidth: 2
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                display: true,
                position: 'top',
                labels: {
                    color: '#333',      // Dark text for better readability
                    font: {
                        size: 12,
                        weight: 'bold'
                    },
                    boxWidth: 12,
                    padding: 20
                }
            },
            tooltip: {
                backgroundColor: '#333',
                titleColor: '#fff',
                bodyColor: '#fff',
                borderColor: '#555',
                borderWidth: 1,
                displayColors: true,
                callbacks: {
                    label: function(context) {
                        return context.parsed.y + ' orders';
                    }
                }
            }
        },
        scales: {
            x: {
                grid: {
                    display: false      // Cleaner look without x-axis grid lines
                },
                ticks: {
                    color: '#666'       // Dark gray ticks
                }
            },
            y: {
                beginAtZero: true,
                grid: {
                    color: '#e3e6f0',   // Light gray grid lines
                    drawBorder: false   // Cleaner look without axis border
                },
                ticks: {
                    color: '#666',      // Dark gray ticks
                    callback: function(value) {
                        if (Number.isInteger(value)) {
                            return value;
                        }
                    },
                    stepSize: 1         // Whole numbers for order counts
                }
            }
        },
        animation: {
            duration: 1000,             // Smooth animation
            easing: 'easeOutQuart'
        }
    }
});  


        // ====================== MONTHLY CHART ======================
        const chart2Container = document.querySelector('#chart2');
        const rawMonthlyOrders = chart2Container.getAttribute('data-monthly');
        const monthlyRaw = JSON.parse(rawMonthlyOrders); // [{ month: '2025-07', orderCount: 6 }]

        // Prepare 12 months from current month
        const currentDate = new Date();
        const currentYear = currentDate.getFullYear();
        const currentMonth = currentDate.getMonth() + 1;

        const monthlyLabels = Array.from({ length: 12 }, (_, index) => {
            const year = currentMonth + index > 12 ? currentYear + 1 : currentYear;
            const month = (currentMonth + index - 1) % 12 + 1;
            return `${year}-${month.toString().padStart(2, '0')}`;
        });

        // Convert array to lookup map
        const orderMap = {};
        monthlyRaw.forEach(entry => {
            orderMap[entry.month] = entry.orderCount;
        });

        const monthlyData = monthlyLabels.map(label => orderMap[label] || 0);

        const ctx2 = document.getElementById('chart2').getContext('2d');
        new Chart(ctx2, {
            type: 'bar',
            data: {
                labels: monthlyLabels,
                datasets: [{
                    label: 'Monthly Orders',
                    data: monthlyData,
                    backgroundColor: '#4e73df',
                    borderColor: '#2e59d9',
                    borderWidth: 1,
                    borderRadius: 4,
                    hoverBackgroundColor: '#2e59d9',
                    hoverBorderColor: '#1e3fb7',
                    hoverBorderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top',
                        labels: {
                            color: '#333',
                            font: { size: 12, weight: 'bold' },
                            boxWidth: 12,
                            padding: 20
                        }
                    },
                    tooltip: {
                        backgroundColor: '#333',
                        titleColor: '#fff',
                        bodyColor: '#fff',
                        borderColor: '#555',
                        borderWidth: 1,
                        displayColors: true,
                        callbacks: {
                            label: function (context) {
                                return context.parsed.y + ' orders';
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        grid: { display: false },
                        ticks: { color: '#666' }
                    },
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: '#e3e6f0',
                            drawBorder: false
                        },
                        ticks: {
                            color: '#666',
                            callback: function (value) {
                                if (Number.isInteger(value)) return value;
                            },
                            stepSize: 1
                        }
                    }
                },
                animation: {
                    duration: 1000,
                    easing: 'easeOutQuart'
                }
            }
        });

        // yearly chart
        const chart3Container = document.getElementById('chart3')
        const rawYearlyOrders = chart3Container .getAttribute('data-yearlyOrders')
        const yearlyOrders = rawYearlyOrders.split(',').map(Number)

        const currentyear = new Date().getFullYear()

        const yearlyLabels = Array.from({length:5},(_, index)=> currentyear + index )

        const ctx3 = document.getElementById('chart3').getContext('2d')

        let masspopChart3 = new Chart( ctx3,{

                   type: 'bar',
            data: {
                labels: yearlyLabels,
                datasets: [{
                    label: 'Yearly Orders',
                    data: yearlyOrders,
                    backgroundColor: '#4e73df',
                    borderColor: '#2e59d9',
                    borderWidth: 1,
                    borderRadius: 4,
                    hoverBackgroundColor: '#2e59d9',
                    hoverBorderColor: '#1e3fb7',
                    hoverBorderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top',
                        labels: {
                            color: '#333',
                            font: { size: 12, weight: 'bold' },
                            boxWidth: 12,
                            padding: 20
                        }
                    },
                    tooltip: {
                        backgroundColor: '#333',
                        titleColor: '#fff',
                        bodyColor: '#fff',
                        borderColor: '#555',
                        borderWidth: 1,
                        displayColors: true,
                        callbacks: {
                            label: function (context) {
                                return context.parsed.y + ' orders';
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        grid: { display: false },
                        ticks: { color: '#666' }
                    },
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: '#e3e6f0',
                            drawBorder: false
                        },
                        ticks: {
                            color: '#666',
                            callback: function (value) {
                                if (Number.isInteger(value)) return value;
                            },
                            stepSize: 1
                        }
                    }
                },
                animation: {
                    duration: 1000,
                    easing: 'easeOutQuart'
                }
            }

        })

    })
 
    </script>
</body>
</html>