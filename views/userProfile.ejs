    </div>

    <!-- Main Content -->
    <div class="content-wrapper">
        <div class="main-content">
            <div class="user-content">
                <h3>User Details</h3>
                <div class="user-details">
                    <p><strong>Name:</strong> <%= user.username %></p>
                    <p><strong>Phone:</strong> <%= user.phone%></p>
                    <p id="referral">
                        <strong>Referral Code:</strong> <%= user.referralcode %>
                    </p>
                </div>
                
                <div class="button-container">
                    <a class="edit-profile" href="/editProfile">Edit Profile</a>
                    <a class="chng-password" href="/changepassword">Change Password</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Section -->
    <footer class="simple-footer" id="footersection">
        <div class="footer-container">
            <div class="footer-section">
                <h3>COLORLIB</h3>
                <ul>
                    <li><a href="#">Celebrate</a></li>
                    <li><a href="#">Buyer</a></li>
