        </div>
    </nav>

    <!-- Sidebar Navigation -->
    <div id="sidebar">
        <div class="sidebar-content">
            <ul class="sidebar-menu">
                <li><a href="/userProfile" class="active">Profile</a></li>
                <li><a href="/wallet">Wallet</a></li>
                <li><a href="/userAddress">Address</a></li>
