    <main>
        <h2 class="page-title">Your Wishlist</h2>
        <div class="wishlist-grid">
            <% if(isEmpty) { %>
                <div class="no-products">
                    <h3>Your wishlist is empty</h3>
                    <p>Try adding some products you love!</p>
