                </div>
            <% } else { %>
              <% wishlist.forEach(item => { %>
                 <div class="wishlist-item" data-wishlistid="<%= item._id %>">
                  <div class="wishlist-remove">
                 <form class="wishlist-remove-form" data-id="<%= item._id %>">
                 <button type="submit" class="wishlist-remove-btn">
                 <i class="fas fa-times"></i>
                 </button>
                </form>
              </div>
                        <div class="wishlist-image-container">
                            <a href="/getproducts/<%=item.productid%>">
                                <img src="<%=item.imagePath%>" alt="<%= item.product %>">
                            </a>
                        </div>
                        
                        <h6 class="product-category"><%= item.category || 'Product' %></h6>
                        <a href="/getproduct/<%= item.productid %>">
                            <h4><%= item.product %></h4>
                        </a>
                        <p class="wishlist-price">â‚¹<%= item.price.toLocaleString() %></p>
                        <div class="wishlist-actions">
                            <a href="/productdetails/<%= item.productid %>" class="btn btn-view">View Details</a>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </main>

